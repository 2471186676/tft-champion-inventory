extends layout

block script 
    script(src="/javascripts/createSlot.js", type="module") 
    script(src="/javascripts/slotManager.js", champions = champion) 

block css 
    link(rel="stylesheet", href="/stylesheets/rerollSim.css")
    link(rel="stylesheet", href="/stylesheets/shopUI.css")
    link(rel="stylesheet", href="/stylesheets/championBlock.css")
    link(rel="stylesheet", href="/stylesheets/board.css")
    link(rel='stylesheet', href='/stylesheets/champion_select.css')
    link(rel='stylesheet', href='/stylesheets/cost.css')


block link
